## Not sure...
#super + !button{1-3}
#    bspc pointer -t %i %i

super + KP_Add
      bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2 ))

super + KP_Subtract
      bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 2 ))

super + {_,shift +} KP_Enter
      bspc config -d focused window_gap {6,`zenity --entry --add-entry="Size" --title="" --text="Size"`}


#
# control independent hotkeys
#

super + Return
    lxterminal

super + @space
      dmenu_run -l 20 -w 200 -y 18 -fn "-lucy-tewi-medium-r-normal--11-90-*-*-*-*-iso10646-1" -nb '#232c31' -nf '#6c7a80' -sf '#ac4142' -sb '#232c31' -o 0.95


Print
	shoot 2>&1 >/dev/null

{ctrl + , shift + }Print
	shoot {-s,-s} 2>&1 >/dev/null

XF86AudioRaiseVolume
	/home/wild/SpotifyVolume.sh +1%; playerctl volume 0.01+

XF86AudioLowerVolume
	/home/wild/SpotifyVolume.sh -1%; playerctl volume 0.01-

XF86AudioPlay
    playerctl play-pause

XF86AudioMute
		/home/wild/.rice/dmic/dmic -t

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

# make sxhkd reload its configuration files:
super + F1
    pkill -USR1 -x sxhkd
